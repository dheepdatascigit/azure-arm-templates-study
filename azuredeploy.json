{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "storagePrefix": {
            "type": "string",
            "minLength": 3,
            "maxLength": 11,
            "metadata": {
                "description": "The name of the Azure storage resource"
            }
        },
       // This is the allowed values for an Azure storage account
       "storageSKU": {
           "type": "string",
           "defaultValue": "Standard_LRS",
           "allowedValues": [
                "Standard_LRS",
                "Standard_GRS",
                "Standard_RAGRS",
                "Standard_ZRS",
                "Premium_LRS",
                "Premium_ZRS",
                "Standard_RAGZRS"
           ],
           "metadata": {
               "description": "allowed storage SKUs"
           }
       }
    },
    "functions": [],
    "variables": {},
    "resources": [{
        "name": "[toLower(concat(parameters('storagePrefix'),uniqueString(resourceGroup().id)))]", //[parameters('storageName')]
        "type": "Microsoft.Storage/storageAccounts",
        "apiVersion": "2019-06-01",
        "tags": {
            "displayName": "[toLower(concat(parameters('storagePrefix'),uniqueString(resourceGroup().id)))]",
            "project": "AZ ARN template test",
            "Author": "Dheep"
        },
        "location": "[resourceGroup().location]",
        "kind": "StorageV2",
        "sku": {
            "name": "[parameters('storageSKU')]",
            "tier": "Standard"
        }
    }],
    "outputs": {}
}